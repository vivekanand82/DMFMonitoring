                        html += "</tr>";
                        for (var i = 0; i < data.length; i++) {
                            html += "<tr>";
                            html += "<td>" + data[i].InspectionQuestion + "</td>";
                            html += "<td>" + data[i].InspectionAnswer + "</td>";
                            html += "</tr>";

                        }
                        $("#InspectionQuestionsDetails").html(html);
