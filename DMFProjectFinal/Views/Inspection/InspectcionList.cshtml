    </div>
</div>



@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

            $('#tblData').DataTable({
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
            });
        });
    </script>
    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
    <script>
        function ExportToExcel(type, fn, dl) {
            var elt = document.getElementById('tblData');
            var wb = XLSX.utils.table_to_book(elt, { sheet: "sheet1" });
            return dl ?
                XLSX.write(wb, { bookType: type, bookSST: true, type: 'base64' }) :
                XLSX.writeFile(wb, fn || ('Utilization.' + (type || 'xlsx')));
        }
    </script>
    <script>
        function Inspectiondetails(ProjectPreparationID) {
            $("#exampleModal").hide();
            //var ProjectPreparationID = $(this).attr('value');
            $.ajax({
                url: "/Inspection/GetInspectiondetails?ProjectPreparationID=" + ProjectPreparationID,
                type: "POST",
                contentType: "Application/json;charset=utf-8",
