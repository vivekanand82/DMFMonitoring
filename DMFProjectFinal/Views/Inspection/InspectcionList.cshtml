                            //html += "<td>" + data[i].InspectionAnswer + "</td>";
                            html += "<td><a  data-bs-toggle='modal' data-bs-target='#exampleModal2' class='btn btn-small btn-info' onclick='GetQuestionAnswerDetails(" + data[i].ProjectPreparationID + "," + data[i].InstallmentID+")'><i class='fa fa-eye' aria-hidden='true'></i></a></td>";

