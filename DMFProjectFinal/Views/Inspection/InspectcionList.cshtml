                            html += "<td>" + InspectionDate.toLocaleDateString("es-CL") + "</td>";
                            html += "<td><a href=" + data[i].InspectionCopy + " target='_blank'><img src='/Documents/UsersDocs/Update_Attachment_8-2023-15-06--00-01-59.png'  height='20px' width='20px'/></a></td>";
                            html += "<td><a href=" + data[i].InspectionImage1 + " target='_blank'><img src='/Documents/UsersDocs/Update_Attachment_8-2023-15-06--00-01-59.png'  height='20px' width='20px'/></a><a href=" + data[i].InspectionImage2 + " target='_blank'><img src='/Documents/UsersDocs/Update_Attachment_8-2023-15-06--00-01-59.png'  height='20px' width='20px'/></a><a href=" + data[i].InspectionImage3 + " target='_blank'><img src='/Documents/UsersDocs/Update_Attachment_8-2023-15-06--00-01-59.png'  height='20px' width='20px'/></a><a href=" + data[i].InspectionImage4 + " target='_blank'><img src='/Documents/UsersDocs/Update_Attachment_8-2023-15-06--00-01-59.png'  height='20px' width='20px'/></a></td>";
                            html += "<td>" + data[i].Remark + "</td>";
