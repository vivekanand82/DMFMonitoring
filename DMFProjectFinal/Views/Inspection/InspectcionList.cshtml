                success: function (data) {
                    if ($.trim(data) != "") {
                        $("#ProjectName").html("Project Name : <b>" + data[0].ProjectName + "</b>");
                        var html = "";
                        //var InspectionDate = new Date(parseInt(data[0].InspectionDate.substr(6)));
                        //html += "<tr>";
                        //html += "<td rowspan='" + (data.length * 2) + "'>" + data[0].InstallmentName + "</td>";
                        //html += "<td rowspan='" + (data.length * 2) + "'>" + InspectionDate.toLocaleDateString("es-CL") + "</td>";
                        //html += "<td rowspan='" + (data.length * 2) + "'><a href=" + data[i].InspectionCopy + " target='_blank'><img src='/Documents/UsersDocs/Update_Attachment_8-2023-15-06--00-01-59.png'  height='20px' width='20px'/></a></td>";
                        ////html += "<td rowspan='" + (data.length * 2) + "'>" + data[0].InspectionImage1 + "</td>";
                        //html += "<td rowspan='" + (data.length * 2) + "'>" + data[0].Remark + "</td>";
