@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblFundData').DataTable({
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
            });
        });
    </script>
    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
    <script>
        function ExportToExcel(type, fn, dl) {
            var elt = document.getElementById('tblFundData');
            var wb = XLSX.utils.table_to_book(elt, { sheet: "sheet1" });
            return dl ?
                XLSX.write(wb, { bookType: type, bookSST: true, type: 'base64' }) :
                XLSX.writeFile(wb, fn || ('FundReleased.' + (type || 'xlsx')));
        }
    </script>
    <script>
        function FundReleasedetails(ProjectPreparationID) {
            $("#exampleModal").hide();
            debugger
            //var ProjectPreparationID = $(this).attr('value');
            $.ajax({
                url: "/FundRelease/GetFundReleaseDetails?ProjectPreparationID=" + ProjectPreparationID,
                type: "POST",
                contentType: "Application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#ProjectName").html("Project Name : <b>" + data[0].ProjectName + "</b>");
                    var html = "";
                    for (var i = 0; i < data.length; i++) {
                        var RelaeseDate = new Date(parseInt(data[i].RelaeseDate.substr(6)));
                        html += "<tr>";
                        html += "<td>" + data[i].InstallmentName + "</td>";
                        html += "<td>" + RelaeseDate.toLocaleDateString("es-CL") + "</td>";
                        html += "<td>" + data[i].ReleaseAmount + "</td>";
                        html += "<td><a href=" + data[i].FundReleaseCopy + " target='_blank'>View Doc</a></td>";
                        if (data[i].Physicalinstallmentflag == "" || data[i].Physicalinstallmentflag == undefined) {
                            html += "<td>NO</td>";

                        }
                        else {
                            html += "<td>Done</td>";
                        }
                      
                        html += "<td><a href='/Fundrelease/EditReleasedFund?FundReleaseID=" + data[i].FundReleaseID + "' class='btn btn-small btn-success'><i class='fa fa-pencil' aria-hidden='true'></i></a> &nbsp;<a href='/Fundrelease/DeleteReleasedFund?FundReleaseID=" + data[i].FundReleaseID + "' class='btn btn-small btn-danger delete-recored'><i class='fa fa-trash' aria-hidden='true'></i></a></td>";
                        //html += "<td><a href='/Fundrelease/DeleteReleasedFund?FundReleaseID=" + data[i].FundReleaseID +"' class='btn btn-small btn-danger delete-recored'><i class='fa fa-trash' aria-hidden='true'></i></a></td>";
                        html += "</tr>";

                    }
                    $("#FundReleaseDetails").html(html);
                    $("#exampleModal").show();
                }
            })
        }
    </script>
    <script>
        function BindSectroName() {
            debugger
            var SectorType = $("#SectorType").val();
            $.ajax({
                url: "/FundRelease/BindSector?SectorType=" + SectorType,
                dataType: "json",
                contentType: "application/json;charset=utf-8",
                type: "GET",
                success: function (data) {
                    $("#SectorName").empty();
                    $("#SectorName").append("<option value='0'>Choose</option>");
                    for (var i = 0; i < data.length; i++) {
                        $("#SectorName").append("<option value='" + data[i].SectorName + "'>" + data[i].SectorName + "</option>");
                    }
                }
            })
        }
    </script>
