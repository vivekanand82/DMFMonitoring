

@using DMFProjectFinal.Controllers
@using DMFProjectFinal.Models
@model DMFProjectFinal.Models.DTO.DTO_ProjectAssessment

@{
    ViewBag.Title = "ProjectAssesment";
    var AM = ViewBag.GetAccess as AccessManager;
    int j = 0;
    dfm_dbEntities db = new dfm_dbEntities();
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header">
    <h4 class="card-title">Create Project Assessment</h4>
</div>
<div id="divform">
    <div class="card-body">

        <div class="row">
            @*<div class="col-md-6 text-left mb-1">
                <a href="#" class="btn btn-primary btn-round" onclick="ExportToExcel('xlsx')"><i class="fas fa-file-export"></i>Export To Excel</a>
            </div>*@
            @*<div class="col-md-6 text-right mb-1">
                    @if (AM.CanInsert)
                    {
                        <a class="btn btn-primary btn-round" href="@Url.Action("CreateFundRelease", "FundRelease")" id="">Create<i class="fa fa-plus-circle"></i></a>}
                </div>*@

            <div class="col-md-12 mb-30">
                <div class="card card-statistics h-100">
                    <div class="card-body">

                        @if (AM.CanView)
                        {
                            <div class="table-responsive mt-20">
                                @if (ViewBag.LstData != null)
                                {
                                    <table class="table center-aligned-table table-striped table-bordered" id="tblAssesssData" style="width:100%">
                                        <thead style="background-color: #083853;color:white">
                                            <tr>
                                                <th>क्र०सं०</th>
                                                <th>District</th>
                                                <th>Sector Type</th>
                                                <th>Sector Name</th>
                                                <th>Project Name</th>

                                                @*<th>Status</th>*@
                                                @if (AM.CanUpdate || AM.CanDelete || AM.CanView)
                                                {
                                                    <th>Action</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.LstData)
                                            {
                                                j++;
                                                <tr>
                                                    <td>@j</td>
                                                    <td>@item.DistrictName</td>
                                                    <td>@item.SectorType</td>
                                                    <td>@item.SectorName</td>
                                                    <td>@item.ProjectName</td>
                                                    @*<td><a style="color:green">Completed</a></td>*@
                                                    <td>
                                                        @if (AM.RoleID == 2)
                                                        {
                                                            <a href="/ProjectIssueAndFeedBack/CreateProjectAssesment?ProjectPreparationID=@item.ProjectPreparationID" class="btn btn-info"><i class="fa fa-plus" aria-hidden="true"></i></a>

                                                        }
                                                        else
                                                        {
                                                            <a href="#" style="color:red">Assesment Pending</a>

                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table> }
                                else
                                {
                                    <div class="form-group col-md-12  mb-3" style="text-align:center;">
                                        <span>No Record Found</span>
                                    </div>
                                }
                            </div>}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" src="https://unpkg.com/xlsx@0.15.1/dist/xlsx.full.min.js"></script>
    <script>
        function ExportToExcel(type, fn, dl) {
            var elt = document.getElementById('tblAssesssData');
            var wb = XLSX.utils.table_to_book(elt, { sheet: "sheet1" });
            return dl ?
                XLSX.write(wb, { bookType: type, bookSST: true, type: 'base64' }) :
                XLSX.writeFile(wb, fn || ('ProjectListForAssessment.' + (type || 'xlsx')));
        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblAssesssData').DataTable({
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
            });
        });
    </script>
}