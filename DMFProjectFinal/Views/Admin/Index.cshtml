@section scripts{
  
    <script>
        $(document).ready(function () {
            //GetSanctionAndPDetails();
            var YearId = $("#YearId").val();
            $.ajax({
                url: "/Admin/GetTotalCollectionAndExpendature?YearId=" + YearId,
                type: "POST",
                contentType: "Application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#collection").html("&#8377; " + data.Total_DMFCollection.toFixed(2));
                    $("#Sanction").html("&#8377; " + data.SanctionAmount.toFixed(2));
                    $("#Released").html("&#8377; " + data.ReleasedAmount.toFixed(2));
                    $("#Expenditure").html("&#8377; " + data.Expenditure.toFixed(2));
                    $("#Balance").html("&#8377; " + data.BalanceAmount.toFixed(2));
                    //$("#collection").html("&#8377; " + parseFloat(data.Total_DMFCollection / 10000000).toFixed(2)+" Cr");
