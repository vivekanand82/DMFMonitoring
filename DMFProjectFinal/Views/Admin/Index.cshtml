                    //$("#Balance").html("&#8377; " + parseFloat(data.BalanceAmount / 10000000).toFixed(2) + " Cr");
                }
            })
            $.ajax({
                url: "/Admin/GetProposalAndApprovalCount?YearId=" + YearId,
                type: "POST",
                contentType: "Application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#PROPOSALS").html(data.ProjectProposals);
                    $("#APPROVED").html(data.ApprovedProjects);
                    $("#COMPLETED").html(data.CompletedProjects);
                    $("#PENDING").html(data.PendingProjects);
                }
            })
        })

    </script>
